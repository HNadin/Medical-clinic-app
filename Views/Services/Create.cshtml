@model Medical_clinic.Models.Service

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<style>
    a {
        text-decoration: none;
        color: #007BFF;
        margin-right: 10px;
    }
</style>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Doctors">Select Doctors</label>
                <select id="Doctors" name="Doctors" asp-items="ViewBag.Doctors" multiple="multiple" class="form-control"></select>
            </div>
            <div class="form-group">
                <label for="Nurses">Select Nurses</label>
                <select id="Nurses" name="Nurses" asp-items="ViewBag.Nurses" multiple="multiple" class="form-control"></select>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}